<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nstar.usna.edu.nstar.PacketSelector"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:fontFamily="@font/prox_nova_thin"
        android:text="@string/ps_1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:gravity="center" />


    <CalendarView
        android:id="@+id/cal_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:theme="@style/CalenderViewCustom"
        android:dateTextAppearance="@style/CalenderViewDateCustomText"
        android:weekDayTextAppearance="@null" />

    <TextView
        android:id="@+id/select_above"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="@font/prox_nova_thin"
        android:text="Select a date from above, then press the date below"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="@font/prox_nova_thin"
        android:text="Select Date"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:background="@drawable/button_default"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yesterday_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:fontFamily="@font/prox_nova_thin"
            android:text="Yesterday"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/button_default"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginEnd="0.25dp"/>

        <Button
            android:id="@+id/today_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:fontFamily="@font/prox_nova_thin"
            android:text="Today"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/button_default"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginStart="0.25dp"
            android:layout_marginEnd="0.25dp"/>

        <Button
            android:id="@+id/range_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:fontFamily="@font/prox_nova_thin"
            android:text="Range"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/button_default"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginStart="0.25dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/home_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="@font/prox_nova_thin"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_options"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp" />




</LinearLayout>
