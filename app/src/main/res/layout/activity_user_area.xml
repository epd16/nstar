<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nstar.usna.edu.nstar.UserArea"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome-text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:src="@drawable/nstar" />

    <Button
        android:id="@+id/buttonPSAT1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginVertical="2dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="PSAT-1"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:background="@drawable/button_default"/>

    <Button
        android:id="@+id/buttonPSAT2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginVertical="2dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="PSAT-2"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:background="@drawable/button_default"/>

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginVertical="2dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/editInfo"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:background="@drawable/button_options"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginVertical="2dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:background="@drawable/button_logout"/>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginVertical="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/copyright"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

</LinearLayout>
